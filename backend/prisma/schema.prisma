generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Job {
  id              Int             @id @default(autoincrement())
  name            String          @db.VarChar(500)
  description     String?         @db.VarChar(1000)
  flexPullsheetId String          @unique @db.VarChar(255)
  lastSyncedAt    DateTime?
  createdAt       DateTime        @default(now())
  rackDrawings    RackDrawing[]
  pullsheetItems  PullsheetItem[]
}

model EquipmentCatalog {
  id                      Int             @id @default(autoincrement())
  flexResourceId          String?         @unique @db.VarChar(255)
  name                    String          @db.VarChar(255)
  displayName             String          @db.VarChar(255)
  rackUnits               Int?
  isStandardItem          Boolean         @default(false)
  excludeFromRackDrawings Boolean         @default(false)
  createdAt               DateTime        @default(now())
  pullsheetItems          PullsheetItem[]
}

model PullsheetItem {
  id Int @id @default(autoincrement())

  // Job link (required)
  jobId Int
  job   Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  // Catalog link (optional - for display name lookup)
  equipmentCatalogId Int?
  equipmentCatalog   EquipmentCatalog? @relation(fields: [equipmentCatalogId], references: [id], onDelete: SetNull)

  // Rack placement (optional - null means unplaced)
  rackDrawingId Int?
  rackDrawing   RackDrawing? @relation(fields: [rackDrawingId], references: [id], onDelete: SetNull)

  // Parent/child relationships (for nested equipment)
  parentId Int?
  parent   PullsheetItem?  @relation("PullsheetItemHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children PullsheetItem[] @relation("PullsheetItemHierarchy")

  // Core fields
  name                String  @db.VarChar(500)
  displayNameOverride String? @db.VarChar(500)
  rackUnits           Int
  quantity            Int     @default(1)
  flexLineId          String  @db.VarChar(255)
  flexSection         String  @db.VarChar(255)
  isFromPullsheet     Boolean @default(true)
  notes               String? @db.VarChar(1000)

  // Placement fields (only relevant when rackDrawingId is set)
  side          Side?
  startPosition Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([jobId])
  @@index([equipmentCatalogId])
  @@index([rackDrawingId])
  @@index([flexSection])
  @@index([parentId])
}

enum Side {
  FRONT
  BACK
  FRONT_LEFT
  FRONT_RIGHT
  BACK_LEFT
  BACK_RIGHT
}

model RackDrawing {
  id             Int             @id @default(autoincrement())
  jobId          Int
  job            Job             @relation(fields: [jobId], references: [id], onDelete: Cascade)
  name           String          @db.VarChar(500)
  totalSpaces    Int
  isDoubleWide   Boolean         @default(false)
  flexSection    String          @db.VarChar(100)
  displayOrder   Int             @default(0)
  notes          String?         @db.VarChar(1000)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  pullsheetItems PullsheetItem[]

  @@index([jobId])
}
